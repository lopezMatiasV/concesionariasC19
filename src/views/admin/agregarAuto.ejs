<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs')  %>
    <script src="/javascript/formValidators/autoValidator.js"></script> 
<body>
    <%- include('../partials/headerAdmin.ejs')  %> 
    <main class="container">
        <h3 class="text-center">Agregar Auto</h3>
        <div class="container col-md-4">
            <form class="row g-3" id="form" action="/admin/autos/create" method="POST" enctype="multipart/form-data">
                <div class="col-12">
                    <label for="inputName" class="form-label">Marca</label>
                    <input type="text" class="form-control" id="marca" name="marca" value="<%= locals.old?.marca ?? "" %>">
                    <small class="text-danger" id="errorMarca"><%= locals.errors?.marca ? errors.marca.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="inputAddress" class="form-label">Modelo</label>
                    <input type="text" class="form-control" id="modelo" name="modelo" value="<%= locals.old?.modelo ?? "" %>">
                    <small class="text-danger" id="errorModelo"><%= locals.errors?.modelo ? errors.modelo.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="inputTel" class="form-label">AÃ±o</label>
                    <input type="number" class="form-control" id="anio" name="anio" value="<%= locals.old?.anio ?? "" %>">
                    <small class="text-danger" id="errorAnio"><%= locals.errors?.anio ? errors.anio.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="inputSucursal" class="form-label">Sucursal</label>
                    <select name="sucursalId" id="sucursal" class="form-control">
                        <option value="" selected hidden>Elige tu sucursal</option>
                        <% sucursales.forEach(({id, nombre}) => { %>
                            <option value="<%= id %>"><%= nombre %></option>
                        <% }) %>
                    </select>
                    <small class="text-danger" id="errorSucursal"><%= locals.errors?.sucursalId ? errors.sucursalId.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="inputTel" class="form-label">Color</label>
                    <input type="text" class="form-control" id="color" name="color" value="<%= locals.old?.color ?? "" %>">
                    <small class="text-danger" id="errorColor"><%= locals.errors?.color ? errors.color.msg : "" %></small>
                </div>
                <!-- Image preview -->
                <div id="imagePreview" class="container d-flex flex-wrap justify-content-center" style="gap:10px">
                </div>
                
                <div class="col-12">
                    <label for="inputFile" class="form-label">Imagen</label>
                    <input type="file" multiple class="form-control" id="inputFile" name="imagen"/>
                    <small class="text-danger" id="errorImagen"><%= locals.errors?.image ? errors.image.msg : "" %></small>
                </div>
                <small class="text-danger" id="errorForm"></small>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">AGREGAR</button>
                </div>
            </form>
        </div>
    </main>
    <script src="/js/imagePreview.js"></script>
    <%- include('../partials/scripts.ejs')  %> 
</body>
</html>