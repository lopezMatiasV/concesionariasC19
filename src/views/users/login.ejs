<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs')  %>
    <script src="/javascript/formValidators/loginValidator.js"></script>
<body>
    <%- include('../partials/header.ejs')  %> 
    <main class="container">
        <h3 class="text-center">Login</h3>
        <div class="container col-md-4">
            <form class="row g-3" id="formLogin" action="/users/login" method="POST">
                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="email" name="email" value="<%= locals.old?.email ?? '' %>">
                    <small class="text-danger" id="errorEmail"><%= locals.errors?.email?.msg ?? "" %></small>
                </div>
                <div class="col-12">
                    <label for="pass" class="form-label">pass</label>
                    <input type="password" class="form-control" id="pass" name="pass">
                    <small class="text-danger" id="errorPass"><%= locals.errors?.pass?.msg ?? "" %></small>
                </div>
                <div class="col-12">
                    <label for="recordar">Recordarme</label>
                    <input type="checkbox" name="recordar" id="recordar">
                </div>
                <small class="text-danger" id="errorForm"></small>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">LOGIN</button>
                </div>
                <div class="col-12">
                    <p>No tenes cuenta? <a href="/users/register">registrate aqui</a></p>
                </div>
            </form>
        </div>
    </main>
   
    <%- include('../partials/scripts.ejs')  %> 
</body>
</html>