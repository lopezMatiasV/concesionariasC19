<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs')  %> 
    <script src="/javascript/imagePreview.js"></script>
    <!-- <script src="/javascript/profileValidator.js"></script> -->
<body>
    <%- include('../partials/header.ejs')  %> 
    <main class="container">
        <h3 class="text-center">Perfil <%= user.nombre %> </h3>
        <div class="container col-md-4">
            <form class="row g-3" action="/users/perfil/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="col-12">
                    <label for="inputName" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="inputName" name="nombre" value="<%= (locals.old && old.nombre) ? old.nombre : user.nombre %>">
                    <small class="text-danger"><%= (locals.errors  && errors.nombre) ? errors.nombre.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="inputName" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="inputName" name="apellido" value="<%= user.apellido %>">
                    <small class="text-danger"></small>
                </div>
                <div class="col-12">
                    <label for="inputName" class="form-label">Email</label>
                    <input type="email" class="form-control" id="inputName" name="email" value="<%= user.email %>" readonly>
                    <small class="text-danger"></small>
                </div>
                <div class="col-12">
                    <label for="inputAddress" class="form-label">Dirección</label>
                    <input type="text" class="form-control" id="inputAddress" name="direccion" value="<%= user.direccion %>">
                    <small class="text-danger"></small>
                </div>
                <div class="col-12">
                    <label for="inputTel" class="form-label">Teléfono</label>
                    <input type="tel" class="form-control" id="inputTel" name="telefono" value="<%= user.telefono %>">
                    <small class="text-danger"></small>
                </div>
                <div class="col-12">
                    <figure class="text-center">
                        <div id="imagePreview">
                            <img src="/images/<%= user.avatar %> " alt="" width="200px" height="200px">
                        </div>
                    </figure>
                    <label for="inputFile" class="form-label">Imagen</label>
                    <input type="file" class="form-control" name="avatar" id="inputFile">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Modificar</button>
                </div>
            </form>
        </div>
    </main>
    <%- include('../partials/scripts.ejs')  %> 
</body>
</html>